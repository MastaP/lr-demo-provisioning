ProxyPreserveHost On
ProxyPass /balancer-manager !

<Location /balancer-manager>
  SetHandler balancer-manager
</Location>

<Proxy balancer://mycluster>
  <% route = 1 %>
  <% for item in @node["loadbalancer"]["nodes"] %>
  BalancerMember http://<%= item %>:<%= node["loadbalancer"]["nodeport"] %> route=<%= route %>
  <%   route += 1 %>
  <% end %>	
</Proxy>

<Location />
  Allow from all
  ProxyPass balancer://mycluster/ stickysession=<%= node["loadbalancer"]["sessionid"] %> <% if node["loadbalancer"]["scolonpathdelim"] %>scolonpathdelim=On<% end %>
</Location>