ProxyPreserveHost On

<Location /balancer-manager>
  SetHandler balancer-manager
</Location>

<Proxy balancer://mycluster>
  <% route = 1 %>
  <% for item in @node["loadbalancer"]["nodes"] %>
  BalancerMember http://<%= item %>:8080 route=<%= route %>
  <%   route += 1 %>
  <% end %>	
</Proxy>

<Location /<%= node["loadbalancer"]["context"] %>>
  Allow from all
  ProxyPass balancer://mycluster/<%= node["loadbalancer"]["context"] %> stickysession=JSESSIONID|jsessionid scolonpathdelim=On
</Location>